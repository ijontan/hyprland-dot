/* Main Config 1080p */

@import "~/.config/rofi/master-config.rasi" 

/* ---- Configuration ---- */
configuration {
	font: "Fira Code SemiBold 12";
}

/* ---- Window ---- */
window {
    width:	50%;
}
/* ---- Listview ---- */
listview {
  columns: 4;
  lines: 5;
  fixed-height:	true;
}

/* ---- Element ---- */
element {
  orientation: vertical;
  padding: 12px;
  spacing: 6px;
  border-radius: 12px;
}

element-icon {
  size: 5%;
}

element-text {
  font: "Fira Code SemiBold 12";
  vertical-align: 0.5;
  horizontal-align: 0.5;
}
